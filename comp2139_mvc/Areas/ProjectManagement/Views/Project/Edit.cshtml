@using comp2139_mvc.Areas.ProjectManagement.Models
@model Project

@{
    ViewData["Title"] = "Edit Project";
}

<h2>Edit Project</h2>

@using (Html.BeginForm("Edit", "Project", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="ProjectName">Project Name (Title):</label>
        <input type="text" id="ProjectName" name="ProjectName" class="form-control" value="@Model.ProjectName" />
        <span class="text-danger">@Html.ValidationMessageFor(model => model.ProjectName)</span>
    </div>

    <div class="form-group">
        <label for="Description">Description:</label>
        <textarea id="Description" name="Description" class="form-control">@Model.Description</textarea>
        <span class="text-danger">@Html.ValidationMessageFor(model => model.Description)</span>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.CreatedDate)
        <input type="date" class="form-control" asp-for="CreatedDate" asp-format="{0:yyyy-MM-ddTHH:mm}" 
        value="@{if(Model.CreatedDate!=null){
                Model.CreatedDate.Value.ToShortDateString();
                }}"
        />
        @Html.ValidationMessageFor(model => model.CreatedDate, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DueTime)
        <input type="date" class="form-control" asp-for="DueTime" asp-format="{0:yyyy-MM-ddTHH:mm}"
               value="@{
        if(Model.DueTime!=null){
                Model.DueTime.Value.ToShortDateString();
                }}" />        
        @Html.ValidationMessageFor(model => model.DueTime, "", new { @class = "text-danger" })
    </div>
    


    <div class="form-group">
        <label for="Status">Status:</label>
        <input type="text" id="Status" name="Status" class="form-control" value="@Model.Status" />
        <span class="text-danger">@Html.ValidationMessageFor(model => model.Status)</span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
}
