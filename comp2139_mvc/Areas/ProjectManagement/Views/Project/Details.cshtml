@model Project




@{
    ViewData["Title"] = "Details Project";
}

<h1>Project Details</h1>

<div>
    <label>Name:</label>
    <p>@Model.ProjectName</p>
</div>

<div>
    <label>Description:</label>
    <p>@Model.Description</p>
</div>
@if (Model.CreatedDate != null)
{
    <div>
        <label>Start:</label>
        <p>@Model.CreatedDate.Value.ToString("dd. MM. yyyy")</p>
    </div>
}
@if (Model.DueTime != null){
<div>
    <label>End:</label>
    <p>@Model.DueTime.Value.ToString("dd. MM. yyyy")</p>
</div>
}
<div>
    <label>Status:</label>
    <p class="bg-primary">@Model.Status</p>
</div>

<div id="projectComments" class=" border-primary border-1 bg-dark bg-opacity-10">
    <h3>Comments</h3>
    <div id="commentsList" class="comments-container">
    </div>
    <form id="addCommentForm" class="mt-3">
        <input type="hidden" name="ProjectId" value="@Model.ProjectId" />
        <div class="form-group">
            <textarea name="Content" class="form-control" placeholder="Add comment ..."></textarea>
        </div>
        <button type="submit" class="btn btn-success">Post Comment</button>
    </form>
</div>

@section Scripts {
    <script src="~/js/projectComment.js"></script>
    <script>
        $(document).ready(function () {
            loadComments(@Model.ProjectId);
        });
    </script>
}