@model ProjectTask

@{
    //Razor Block
    ViewData["Title"] = "Delete Task";
}

<h1>Delete</h1>

<h3>Are you sure you would like to delete this project?</h3>
<div>
    <h4>Tasks</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TaskName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TaskName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TaskDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TaskDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Project.ProjectName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Project.ProjectName)
        </dd>

      
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        @Html.HiddenFor(model => model.TaskId)
        <input type="submit" value="Delete" class="btn btn-primary" />
        <a asp-action="Index" asp-route-projectId="@Model.projectId" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}