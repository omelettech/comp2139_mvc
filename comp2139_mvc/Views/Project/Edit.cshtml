@model Project

@{
    ViewData["Title"] = "Edit Project";
}

<h2>Edit Project</h2>

@using (Html.BeginForm("Update", "Project", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="ProjectName">Project Name (Title):</label>
        <input type="text" id="ProjectName" name="ProjectName" class="form-control" value="@Model.ProjectName" />
        <span class="text-danger">@Html.ValidationMessageFor(model => model.ProjectName)</span>
    </div>

    <div class="form-group">
        <label for="Description">Description:</label>
        <textarea id="Description" name="Description" class="form-control">@Model.Description</textarea>
        <span class="text-danger">@Html.ValidationMessageFor(model => model.Description)</span>
    </div>

    <div class="form-group">
        <label for="Status">Status:</label>
        <input type="text" id="Status" name="Status" class="form-control" value="@Model.Status" />
        <span class="text-danger">@Html.ValidationMessageFor(model => model.Status)</span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
}
